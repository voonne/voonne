		<meta name="viewport" content="initial-scale=1">

		<title>{ifset $title}{$title|translate} - {/ifset}Voonne</title>

		<link rel="stylesheet" type="text/css" href="{plink :Admin:Assets:Default:default, name => 'styles/admin.css'}">
		<script src="{plink :Admin:Assets:Default:default, name => 'scripts/admin.js'}"></script>
