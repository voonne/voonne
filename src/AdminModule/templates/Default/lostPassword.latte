{var $title = 'voonne-signIn.lostPassword.title'}

{block content}

<div class="box">
	{form lostPasswordForm}
		<h1>{('voonne-signIn.lostPassword.title'|translate)}</h1>

		{control flashMessageControl, $flashes}

		{control formErrorControl, $form->getErrors()}

		<div class="form-group">
			{label email/}
			{input email, class => 'form-control'}
		</div>

		{input submit, class => 'btn btn-primary'}
	{/form}

	<a n:href="Default:default" class="btn-bottom">{('voonne-signIn.lostPassword.back'|translate)}</a>
</div>
